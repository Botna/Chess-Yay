<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00A2E8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">




            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/campaigns"
                android:onClick="playGame"
                />



            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/rulesbutton"
                android:onClick="rulesLaunch"
                />


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/settings"
                android:onClick="settingsLaunch"
                />


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/accountbutton"
                android:onClick="accountLaunch"
                />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/logoutbutton"
                android:onClick="logout"
                />



        </LinearLayout>



    </ScrollView>


</LinearLayout>